{
    "extends": "./rules/index.js",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true
    },
    "rules": {
        "indent": [
            "error",
            2 
        ],
        "no-console": [
            "error",
            {"allow": ["log"]}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ]
    }
}
